<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">

        <shape android:shape="rectangle">
            <gradient android:angle="135" android:endColor="@color/button_active_gradient_2" android:startColor="@color/button_active_gradient_1" />
            <corners android:radius="@dimen/corner_radius" />
            <stroke android:width="@dimen/button_stroke" android:color="@color/button_active_gradient_1" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="225" android:endColor="@color/button_gradient_2" android:startColor="@color/button_gradient_1" />
            <corners android:radius="@dimen/corner_radius" />
            <stroke android:width="@dimen/button_stroke" android:color="@color/button_gradient_1" />
        </shape>

    </item>
</selector>